{
  "manifest_version": 3,
  "name": "Twitch Highlighter",
  "version": "1.0",
  "description": "Highlights mods, VIPs and verified users in Twitch chat.",
  "permissions": [],
  "icons": {
    "128": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
